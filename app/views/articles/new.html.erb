<div class="container">
  <div class="row mt-5">
    <div class="col-sm-8 mx-auto">
      <h1>New article</h1>
      <div class="article-card">

          <%= simple_form_for(@article) do |f| %>
            <%= f.input :title, class: "form-group" %>
            <%= f.input :content, class: "form-group", :as => :text, :input_html => { 'rows' => 6 } %>
            <%= f.submit %>
          <% end %>

        </div>
      <%= link_to "Back to articles", articles_path%>
      </div>
    </div>
  </div>
